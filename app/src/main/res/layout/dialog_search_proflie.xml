<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_dialogSearch"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/r1" />

    <TextView
        android:id="@+id/textViewName_dialogSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Trương Hoàng Anh Vũ"
        android:textColor="#000"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_dialogSearch"
        app:layout_constraintStart_toStartOf="@+id/imageView_dialogSearch"
        app:layout_constraintTop_toBottomOf="@+id/imageView_dialogSearch" />

    <TextView
        android:id="@+id/textViewGioTinh_dialogSearch"
        android:layout_width="150dp"
        android:layout_height="29dp"
        android:text="Giới tính: nam"
        android:gravity="center"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewNS_dialogSearch"
        app:layout_constraintEnd_toEndOf="@+id/imageView_dialogSearch"
        app:layout_constraintStart_toEndOf="@+id/textViewNS_dialogSearch"
        app:layout_constraintTop_toTopOf="@+id/textViewNS_dialogSearch" />

    <TextView
        android:id="@+id/textViewNS_dialogSearch"
        android:layout_width="150dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="06/10/1999"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/textViewGioTinh_dialogSearch"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/imageView_dialogSearch"
        app:layout_constraintTop_toBottomOf="@+id/textViewName_dialogSearch" />

    <TextView
        android:id="@+id/textViewSDT_dialogSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0346245763"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_dialogSearch"
        app:layout_constraintStart_toStartOf="@+id/imageView_dialogSearch"
        app:layout_constraintTop_toBottomOf="@+id/textViewNS_dialogSearch" />

</androidx.constraintlayout.widget.ConstraintLayout>